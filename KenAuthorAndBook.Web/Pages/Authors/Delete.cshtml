@page
@model Authors.DeleteModel
@using KenAuthorAndBook.Models

<h1>Delete Author</h1>

<div>
    <h3>Are you sure you want to delete this author?</h3>
    <div>
        <strong>Name:</strong> @Model.Author.Name
    </div>
    <div>
        <strong>Bio:</strong> @Model.Author.Bio
    </div>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Authors/Index" class="btn btn-secondary">Cancel</a>
</form>
